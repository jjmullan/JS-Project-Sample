{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.bracketSameLine": true,
  "editor.formatOnSave": true,
  "git-graph.customEmojiShortcodeMappings": [],
  "gitmoji.addCustomEmoji": [
    // 개발
    {
      "emoji": "✨",
      "code": ":feat:",
      "description": "Feat: 새로운 기능 추가"
    },
    {
      "emoji": "🐛",
      "code": ":fix:",
      "description": "Bugfix: 버그 수정"
    },
    {
      "emoji": "🔧",
      "code": ":conf:",
      "description": "Fix: 단순 수정"
    },
    {
      "emoji": "✅",
      "code": "::",
      "description": "Test: 테스트 코드 추가, 수정, 삭제 (비즈니스 로직 변경 없음)"
    },
    {
      "emoji": "🐳",
      "code": "::",
      "description": "Chore: 빌드, 의존성, 설정 파일 수정"
    },
    {
      "emoji": "🔄",
      "code": "::",
      "description": "Revert: 커밋 되돌리기"
    },
    {
      "emoji": "💫",
      "code": "::",
      "description": "Merge: Pull 과정 중 자동 병합 발생 시"
    },
    // UI/UX
    {
      "emoji": "💄",
      "code": "::",
      "description": "Style: CSS 스타일 변경 (UI 변경)"
    },
    {
      "emoji": "♿",
      "code": "::",
      "description": "ALLY: 웹 접근성 개선 (WCAG 가이드라인 준수)"
    },
    // 코드 품질
    {
      "emoji": "♻️",
      "code": ":refactor:",
      "description": "Refactor: 코드 리팩토링"
    },
    {
      "emoji": "🏷️",
      "code": "::",
      "description": "Type: TypeScript 타입 정의 변경"
    },
    {
      "emoji": "💬",
      "code": "::",
      "description": "Comment: 필요한 주석 추가 및 변경"
    },
    // 파일 관리
    {
      "emoji": "🎉",
      "code": "::",
      "description": "Init: 프로젝트 초기 생성"
    },
    {
      "emoji": "🎞",
      "code": "::",
      "description": "Src: 이미지, 아이콘 등 소스파일 추가 및 수정"
    },
    {
      "emoji": "🛠",
      "code": "::",
      "description": "Rename: 파일 혹은 폴더명 수정 또는 이동"
    },
    {
      "emoji": "🔥",
      "code": ":remove:",
      "description": "Remove: 파일을 삭제하는 작업만 수행"
    },
    {
      "emoji": "📝",
      "code": ":docs:",
      "description": "Docs: 문서 추가/수정"
    }
  ]
}
